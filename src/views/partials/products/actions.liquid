<div class="mx-auto max-w-7xl px-4 py-2 sm:px-6 lg:px-8">
    <div class="flex lg:justify-between justify-center flex-col lg:flex-row">
        {% render 'partials/products/sorting', selected: sorting %}
        {% render 'partials/products/price-filter', priceMin: filters.priceMin, priceMax: filters.priceMax %}
        {% assign tags = products | productTags %}
        {% render 'partials/products/tag-filter', selected: filters.tag, tags: tags %}
        {% assign categories = products | productCategories %}
        {% render 'partials/products/category-filter', selected: filters.category, categories: categories %}
    </div>
</div>